{% extends 'base.html.twig' %}
{% block title %}mbulanceDriver index {% endblock %}
{% block maintitle %} mbulanceDriver index{% endblock %}
{% block breadcrumb %}
<li class="breadcrumb-item">AmbulanceDriver index</li>
<li class="breadcrumb-item active">AmbulanceDriver index</li>
{% endblock %}

{% block body %}
<div class="row">
    <div class="card col-md">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">

                    {% if edit  %}
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">
                                Edit
                            </h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                            {% else %}
                            <div class="card card-info collapsed-card">
                                <div class="card-header">
                                    <h3 class="card-title">
                                        Add New
                                    </h3>
                                    <div class="card-tools">
                                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                    {% endif %}



                                    <!-- /.card-tools -->
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    {% if edit  %}
                                    {% set button_label = 'Update' %}
                                    {% endif %}
                                    {{ include('ambulance/d_form.html.twig') }}
                                </div>
                                <!-- /.card-body -->
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="card ">
                                <div class="card-header">
                                    <h3 class="card-title">Ambulance Driver List</h3>
                                    <div class="card-tools">
                                        <form class="form-inline ml-3">
                                            <div class="input-group input-group-sm">
                                                <input class="form-control form-control-navbar" placeholder="Search"
                                                    type="search" name="search">
                                                <div class="input-group-append">
                                                    <button class="btn btn-navbar" type="submit">
                                                        <i class="fas fa-search"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>

                                <div class="card-body">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>
                                                    #
                                                </th>
                                                <th>{{ knp_pagination_sortable(ambulance_drivers, 'Name', 'a.name') }}
                                                </th>
                                                <th>Phone</th>
                                                <th>{{ knp_pagination_sortable(ambulance_drivers, 'Availability', 'a.status') }}
                                                </th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% set i = 1 %}
                                            {% for ambulance_driver in ambulance_drivers %}
                                            <tr>
                                                <td>
                                                    {{ i }}
                                                    {% set i = i+1 %}
                                                </td>
                                                <td>{{ ambulance_driver.name }}</td>
                                                <td>{{ ambulance_driver.phoneNumber }}</td>
                                                <td>{{ ambulance_driver.status }}</td>
                                                <td>

                                                    <form class="d-inline" method="post">
                                                        <input type="hidden" name="edit" value="{{ambulance_driver.id}}">
                                                        <button class="btn btn-info btn-sm" title="Edit">
                                                            <i class="fa fa-edit"></i>
                                                        </button>
                                                    </form>
                                                    <form class="d-inline" method="post"
                                                        action="{{ path('ambulance_driver_delete', {'id': ambulance_driver.id}) }}"
                                                        onsubmit="return confirm('Are you sure you want to delete this item?');">
                                                        <input type="hidden" name="_method" value="DELETE">
                                                        <input type="hidden" name="_token"
                                                            value="{{ csrf_token('delete' ~ ambulance_driver.id) }}">
                                                        <button class="btn btn-danger btn-sm" title="Delete">
                                                            <i class="fa fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </td>

                                            </tr>
                                            {% else %}
                                            <tr>
                                                <td colspan="5">no records found</td>
                                            </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                    <div class="float-right">{{ knp_pagination_render(ambulance_drivers) }}</div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>

            </div>
            <!-- /.card-body -->
        </div>

        {% endblock %}